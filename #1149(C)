#include <iostream>

using namespace std;

int main(){
	int n;
	cin >> n;
	int arr[1000][3];
	for (int i = 0; i < n; i++){
		for (int j = 0; j < 3; j++){
			cin >> arr[i][j];
		}
	}
	
	for (int i = 1; i < n; i++){
		for (int j = 0; j < 3; j++){
			if (arr[i - 1][(j + 1) % 3] < arr[i - 1][(j + 2) % 3]){
				arr[i][j] = arr[i - 1][(j + 1) % 3] + arr[i][j];
			}
			else if (arr[i - 1][(j + 1) % 3] >= arr[i - 1][(j + 2) % 3]){
				arr[i][j] = arr[i - 1][(j + 2) % 3] + arr[i][j];
			}
		}
	}
	int min = 999999;
	for (int i = 0; i < 3; i++){
		if (min>arr[n - 1][i]){
			min = arr[n - 1][i];
		}
	}

	cout << min << endl;

	return 0;
}
